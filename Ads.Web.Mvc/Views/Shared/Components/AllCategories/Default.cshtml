@model Ads.Business.Dtos.Category.CategoryViewDto
<section class=" section">
	<!-- Container Start -->
	<div class="container">
		<div class="row">
			<div class="col-12">
				<!-- Section title -->
				<div class="section-title">
					<h2>KATEGORİLER</h2>
					@*<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Perferendis, provident!</p>*@
				</div>
				<div class="row">
					<!-- Category list -->
					@if (Model != null && Model.Categories.Count() > 0)
					{
						@foreach (var category in Model.Categories)
						{
							<div class="col-lg-3 offset-lg-0 col-md-5 offset-md-1 col-sm-6 col-6">

								<div class="category-block">

									<div class="header">

										<i class="@category.IconClass"></i>

										<h4>@category.Name</h4>
									</div>
									<ul class="category-list">
										@if (category.Subcategories != null && category.Subcategories.Any())
										{
											@foreach (var subcategoryGroup in category.Subcategories.GroupBy(s => s.CategoryId).OrderBy(g => g.Key))
											{
												foreach (var subcategory in subcategoryGroup)
												{
													<li><a asp-area="" asp-controller="Category" asp-action="Index" asp-route-subcategoryId="@subcategory.Id" asp-route-categoryId="@category.Id" asp-route-category-slug="@category.Name" asp-route-subcategory-slug="@subcategory.Name">@subcategory.Name<span>@subcategory.SubcategoryAdverts.Count()</span></a></li>
												}
											}

										}
										@*<li><a asp-area="" asp-controller="Home" asp-action="Index">@subcategory.Name<span>93</span></a></li>*@
										@*<li><a asp-area="" asp-controller="Home" asp-action="Index">@Model.Subcategories <span>93</span></a></li>
								<li><a asp-area="" asp-controller="Home" asp-action="Index">Sub2 <span>93</span></a></li>
								<li><a asp-area="" asp-controller="Home" asp-action="Index">Sub3 <span>93</span></a></li>*@

									</ul>
								</div>

							</div>
						}
					} <!-- /Category List -->

				</div>
			</div>
		</div>
	</div>
	<!-- Container End -->
</section>
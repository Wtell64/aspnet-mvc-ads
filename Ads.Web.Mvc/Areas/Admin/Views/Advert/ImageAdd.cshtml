@model Ads.Business.Dtos.Advert.AdvertImageAdminAddDto
<div class="container-fluid">

  <div class="card">
    <div class="row">



      <div class="card-body">

        <h2>Reklam Resmi Ekle</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
      </div>

    </div>
    <div class="card-body">

      <form method="post" asp-area="Admin" asp-controller="Advert" asp-action="ImageAdd" enctype="multipart/form-data">
       

        <div class="row d-flex align-items-center justify-content-center">
          <div class="col-lg-6">
            <div class="form-group">
              <div class="choose-file text-center  rounded">
                <label for="file-upload">

                  <span id="upload-status" style="color:#333" class="d-block font-weight-bold">Ürünün resimlerini buraya taşıyın</span>
                  <span class="d-block">veya</span>
                  <span class="d-block btn bg-primary text-white my-3 select-files">Resim Yükleyin</span>
                  <span class="d-block">Maximum dosya sınırı: 1000 KB</span>


                  <input type="file" asp-for="Files" class="form-control-file d-none" multiple id="file-upload">
                  <span asp-validation-for="Files" class="text-danger"></span>
                </label>
              </div>
            </div>
          </div>
        </div>

        <input type="number" value="@ViewBag.AdvertId" asp-for="@Model.AdvertId" class="form-control" style="display:none" readonly />
        



        <div class="row">
          <div class="col-lg-6">
            <div class="form-group" style="margin-top:10px">
              <button type="submit" asp-area="Admin" asp-controller="Advert" asp-action="ImageAdd" class="btn btn-success">Ekle</button>
              <a asp-area="Admin" asp-controller="Advert" asp-action="ImageIndex" asp-route-id="@ViewBag.AdvertId" class="btn btn-danger">Geri Dön</a>
            </div>
          </div>
        </div>


      </form>



    </div>

  </div>
</div>


@section Scripts {
  <script src="https://cdn.ckeditor.com/ckeditor5/40.0.0/classic/ckeditor.js"></script>
  <!-- Add these links in the head section -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.css">
  <script src="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.js"></script>

  <script>



    $(document).ready(function () {

      var multipleCancelButton = new Choices('#choices-multiple-remove-button', { //For Selecting Multiple Categories
        removeItemButton: true,
        maxItemCount: 5,
        searchResultLimit: 100,
        renderChoiceLimit: 100,

      });

      $(".nice-select").hide(); //To fix a bug wiwth Choices
    });
  </script>
}

<style>
  .choices__list--multiple .choices__item {
    background-color: #007bff !important
  }

</style>



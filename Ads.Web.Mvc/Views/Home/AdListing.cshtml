@model Ads.Business.Dtos.Advert.AdvertAddDto




<section class="ad-post bg-gray py-5">
  <div class="container">
    <form asp-area="" asp-controller="Home" asp-action="AdListing" enctype="multipart/form-data" method="post">
      <!-- Post Your ad start -->

      <fieldset class="border border-gary p-4 mb-5">

        <div class="row">
          <div class="col-lg-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h3>Reklamınızı Yaratın</h3>
            @if (TempData.ContainsKey("SuccessMessage"))
            {
              <div class="alert alert-success">
                @TempData["SuccessMessage"]
              </div>
            }

            @if (TempData.ContainsKey("ErrorMessage"))
            {
              <div class="alert alert-danger">
                @TempData["ErrorMessage"]
              </div>
            }
          </div>
          <div class="col-lg-6">
            <h6 class="font-weight-bold pt-4 pb-1">Reklamın Adı:</h6>
            <input type="text" class="border w-100 p-2 bg-white text-capitalize" asp-for="@Model.Title" placeholder="Reklamın Adını Girin">
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
            <h6 class="font-weight-bold pt-4 pb-1">Reklamın Türü:</h6>
            <div class="row px-3">
              <div class="col-lg-4 mr-lg-4 my-2 rounded bg-white">
                <input type="radio" asp-for="@Model.AdType" value="personal" id="personal">
                <label asp-for="@Model.AdType" class="py-2">Kişisel</label>
              </div>
              <div class="col-lg-4 mr-lg-4 my-2 rounded bg-white ">
                <input type="radio" asp-for="@Model.AdType" value="business" id="business">
                <label asp-for="@Model.AdType" class="py-2">İş Yeri</label>
              </div>
              <span asp-validation-for="@Model.AdType" class="text-danger"></span>
            </div>
            <h6 class="font-weight-bold pt-4 pb-1">Açıklama:</h6>
            <textarea id="" asp-for="@Model.Description" class="border p-3 w-100" rows="7" placeholder="Ürünün açıklamasını buraya girin"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
          </div>
          <div class="col-lg-6">
            <h6 class="font-weight-bold pt-4 pb-1">Reklamın Kategorisi:</h6>
            <div class="col-lg-12">

              <select asp-for="@Model.SelectedSubategoryIds" id="choices-multiple-remove-button" multiple class="w-100 ">
                
                  @if (ViewBag.Categories != null)
                  {
                    foreach (var item in ViewBag.Subcategories)
                    {
                      <option value="@item.Value">@item.Text</option>
                    }
                  }
              </select>
              <span asp-validation-for="@Model.SelectedSubategoryIds" class="text-danger"></span>
            </div>
            <div class="price">
              <h6 class="font-weight-bold pt-4 pb-1">Ürünün Fiyatı:</h6>
              <div class="row px-3">
                <div class="col-lg-4 mr-lg-4 rounded bg-white my-2 ">
                  <input type="text" asp-for="@Model.Price" class="border-0 py-2 w-100 price" placeholder="Fiyat"
                         id="price">

                </div>

                <div class="col-lg-4 mrx-4 rounded bg-white my-2 ">
                  <input type="checkbox" asp-for="@Model.IsNegotiable" id="Negotiable">

                  <label for="Negotiable" class="py-2">Pazarlık Edilebilir</label>
                </div>

                <span asp-validation-for="@Model.Price" class="text-danger"></span>
                <span asp-validation-for="@Model.IsNegotiable" class="text-danger"></span>
              </div>
            </div>
            <div class="choose-file text-center my-4 py-4 rounded">
              <label for="file-upload">

                <span id="upload-status" style="color:#333" class="d-block font-weight-bold">Ürünün resimlerini buraya taşıyın</span>
                <span class="d-block">veya</span>
                <span class="d-block btn bg-primary text-white my-3 select-files">Resim Yükleyin</span>
                <span class="d-block">Maximum dosya sınırı: 1000 KB</span>


                <input type="file" asp-for="@Model.Files" class="form-control-file d-none" multiple id="file-upload">
                <span asp-validation-for="@Model.Files" class="text-danger"></span>
              </label>
            </div>
          </div>
        </div>
      </fieldset>
      <!-- Post Your ad end -->
      <!-- seller-information start -->
      <fieldset class="border p-4 my-5 seller-information bg-gray">
        <div class="row">
          <div class="col-lg-12">
            <h3>Satıcı Bilgileri</h3>
          </div>
          <div class="col-lg-6">
            <h6 class="font-weight-bold pt-4 pb-1">Satıcının Adı:</h6>
            <input type="text" asp-for="@Model.ContactName" placeholder="Satıcının Adı" class="border w-100 p-2">
            <h6 class="font-weight-bold pt-4 pb-1">Satıcının Numarası:</h6>
            <input type="text" asp-for="@Model.ContactNumber" placeholder="Satıcının Numarası" class="border w-100 p-2">
          </div>
          <div class="col-lg-6">
            <h6 class="font-weight-bold pt-4 pb-1">Satıcının Emaili:</h6>
            <input type="email" asp-for="@Model.ContactEmail" placeholder="name@email.com" class="border w-100 p-2">
            <h6 class="font-weight-bold pt-4 pb-1">Satıcının Adresi:</h6>
            <input type="text" asp-for="@Model.ContactAddress" placeholder="Satının Adresi" class="border w-100 p-2">
          </div>
        </div>
      </fieldset>
      <!-- seller-information end-->
      <!-- ad-feature start -->
      <fieldset class="border bg-white p-4 my-5 ad-feature bg-gray">
        <div class="row">
          <div class="col-lg-12">

            <h3 class="pb-3">
              Ürünün Durumu
              <span class="float-right">
                <a class="text-right font-weight-normal text-success" href="#">
                  Ürünün ne durumda?
                </a>
              </span>
            </h3>

          </div>
          <div class="col-lg-6 my-3">
            <span class="mb-3 d-block">Ürün Durumu:</span>
            <ul>
              <li>
                <input type="radio" asp-for=@Model.ConditionEnum value="0" id="regular-ad">
                <label for="regular-ad" class="font-weight-bold text-dark py-1">Belirtilmedi</label>
              </li>
              <li>
                <input type="radio" id="Featured-Ads" asp-for=@Model.ConditionEnum value="1">
                <label for="Featured-Ads" class="font-weight-bold text-dark py-1">Yeni</label>
              </li>
              <li>
                <input type="radio" id="urgent-Ads" asp-for=@Model.ConditionEnum value="2">
                <label for="urgent-Ads" class="font-weight-bold text-dark py-1">Az Kullanılmış</label>
              </li>
              <li>
                <input type="radio" id="urgent-Ads" asp-for=@Model.ConditionEnum value="3">
                <label for="urgent-Ads" class="font-weight-bold text-dark py-1">Kullanılmış</label>
              </li>
            </ul>
          </div>
        </div>
      </fieldset>
      <!-- ad-feature start -->
      <!-- submit button -->
      <div class="checkbox d-inline-flex">
        <input type="checkbox" asp-for="@Model.AgreeToTerms" id="terms-condition" class="mt-1">
        <label for="terms-condition" class="ml-2">
          Buraya tıklayarak kullanıcı sözleşmesini onaylamış sayılıyorsunuz.
          <span> <a class="text-success" href="terms-condition.html">Kullanıcı sözleşmesini okumak için tıklayın.</a></span>
        </label>
      </div>
      <button type="submit" class="btn btn-primary d-block mt-2">Reklamı Yayınla</button>
    </form>
  </div>
</section>


<style>
  .choices__list--multiple .choices__item {
    background-color: #007bff !important
  }
</style>


@section scripts {
  <!-- Add these links in the head section -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.css">
  <script src="https://cdn.jsdelivr.net/gh/bbbootstrap/libraries@main/choices.min.js"></script>


  <script>
    $(document).ready(function () {

      var multipleCancelButton = new Choices('#choices-multiple-remove-button', { //For Selecting Multiple Categories
        removeItemButton: true,
        maxItemCount: 5,
        searchResultLimit: 100,
        renderChoiceLimit: 100,

      });


      $(".choices__list").on("click", ".choices__item--selectable", function () { //For Category color background color
        $(this).css("background-color", "#007bff");
      });

      $(document).ready(function () {
        $('#file-upload').on('change', function () {
          var uploadStatus = $('#upload-status');
          if (this.files.length > 0) {
            uploadStatus.text('File uploaded successfully');
            uploadStatus.css('color', '#4BB543');
          } else {
            uploadStatus.text('Drop files anywhere to upload');
            uploadStatus.css('color', '#333333'); // Reset to the default color
          }
        });
      });


      $(".nice-select").hide(); //To fix a bug wiwth Choices
    });





  </script>

}
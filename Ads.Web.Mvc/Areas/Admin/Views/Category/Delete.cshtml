@using Ads.Business.Dtos.Category
@model CategoryViewDto
@{
  var successMessage = TempData["successMessage"]?.ToString();
}
<div class="container-fluid">
  <div class="row">
    <div class="col-xxl-6">
      <div class="card card-xxl-strecth mb-3 mb-xl-8">
        <div class="card-header">
          <h3>Kategori Sil</h3>
          @if (!string.IsNullOrWhiteSpace(successMessage))
          {
            <div class="alert alert-danger">
              <strong>Error!</strong>@successMessage
              <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          }
        </div>

        <div class="card-body">
          <form asp-area="Admin" asp-controller="Category" asp-action="Delete" method="post">
            <div class="mb-3">
              <label asp-for="Name" class="form-label"></label>
              <input asp-for="Name" disabled class="form-control" />
              <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Listeye Geri Dön</a>
            <button type="submit" class="btn btn-success">Sil</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
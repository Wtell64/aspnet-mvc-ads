@using Ads.Business.Dtos.Category
@model CategoryViewDto
@{
  var errorMessage = TempData["errorMessage"]?.ToString();
}
<div class="container-fluid">
  <div class="row">
    <div class="col-xxl-6">
      <div class="card card-xxl-strecth mb-3 mb-xl-8">
        <div class="card-header">
          <h3>Kategori Düzenle</h3>
          @if (!string.IsNullOrWhiteSpace(errorMessage))
          {
            <div class="alert alert-danger">
              <strong>Error!</strong>@errorMessage
              <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
            </div>

          }
        </div>

        <div class="card-body">
          <form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post">
            <div class="mb-3">
              <label asp-for="Name" class="form-label"></label>
              <input asp-for="Name" class="form-control" />
              <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
              <label asp-for="IconClass" class="form-label"></label>
              <input asp-for="IconClass" class="form-control" />
              <span asp-validation-for="IconClass" class="text-danger"></span>
            </div>
            <div class="mb-3">
              <label asp-for="Description" class="form-label"></label>
              <textarea asp-for="Description" class="form-control"></textarea>
              <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Listeye Geri Dön</a>
            <button type="submit" class="btn btn-success">Düzenle</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>